{
  "name": "ppt-tagger",
  "version": "1.6.32",
  "description": "A desktop application for managing and tagging PowerPoint files",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev --watch",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "pack": "electron-packager . PPT-Tagger --platform=win32 --arch=x64 --out=dist --overwrite",
    "release": "node release.js",
    "release:win": "release.bat",
    "release:ps": "powershell -ExecutionPolicy Bypass -File release.ps1",
    "auto-release": "node auto-release.js"
  },
  "keywords": [
    "electron",
    "ppt",
    "powerpoint",
    "tagger",
    "desktop"
  ],
  "author": "邓润庭",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.example.ppt-tagger",
    "productName": "PPT Tagger",
    "icon": "assets/icon",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/fs-extra/**/*",
      "node_modules/universalify/**/*",
      "node_modules/graceful-fs/**/*",
      "node_modules/jsonfile/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraMetadata": {
      "main": "main.js"
    },
    "forceCodeSigning": false
  }
}
